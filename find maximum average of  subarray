class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
        int s=0;
        double a=0;
       for(int i=0;i<k;i++){
        s=s+nums[i];


       } 
   a=(double)s/k;
       double maxa=a;
       int l=0;
       int r=k-1;
       while(r<nums.size()-1){
        a=a-(double)nums[l]/k;
        l++;
        r++;
       //nums[r]/k;
        a=a+(double)nums[r]/k;
        maxa=max(a,maxa);
       }
return maxa;
    }
};
