class Solution {
public:
    string removeOuterParentheses(string s) {
        string ans = "";
        int bal = 0;

        for(char ch : s) {
            if (ch == '(') {
                if (bal > 0) ans += ch;  // not outermost '('
                bal++;
            } else { // ch == ')'
                bal--;
                if (bal > 0) ans += ch;  // not outermost ')'
            }
        }
        return ans;
    }
};
