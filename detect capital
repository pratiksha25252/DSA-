class Solution {
public:
    bool detectCapitalUse(string word) {
        int count=0;
        for(int i=0;i<word.length();i++){
            if(isupper(word[i])){
                count++;
            }
        }
            if(isupper(word[0]) && count ==1){
                return true;
            
        }
        if( count == word.length()|| count==0){
            return true;
        }
        return false;
    }
};
